<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      prefWidth="520.0" spacing="12.0" fx:controller="main.java.controller.form.CourseFormController"
      style="-fx-background-color: white; -fx-padding: 16;">
    <children>
        <Text fx:id="formTitle" text="Sửa Môn học" fill="#a3151a">
            <font><Font name="Roboto Bold" size="22"/></font>
        </Text>

        <!-- Ẩn id môn học -->
        <TextField fx:id="courseIdField" managed="false" visible="false"/>

        <GridPane hgap="12" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <children>
                <Label text="Mã môn:" GridPane.rowIndex="0"/>
                <TextField fx:id="courseCodeField" promptText="VD: CS101" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Tên môn:" GridPane.rowIndex="1"/>
                <TextField fx:id="courseNameField" promptText="Nhập tên môn" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Số tín chỉ:" GridPane.rowIndex="2"/>
                <TextField fx:id="creditsField" promptText="VD: 3" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Khoa (Faculty):" GridPane.rowIndex="3"/>
                <ComboBox fx:id="facultyComboBox" promptText="Chọn Khoa" prefWidth="360" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </children>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <children>
                <Button fx:id="cancelButton" text="Hủy" onAction="#handleCancel"/>
                <Button fx:id="saveButton" text="Lưu thay đổi" onAction="#handleSave" style="-fx-background-color: #a3151a; -fx-text-fill: white;"/>
            </children>
            <VBox.margin><Insets top="10"/></VBox.margin>
        </HBox>
    </children>
</VBox>

