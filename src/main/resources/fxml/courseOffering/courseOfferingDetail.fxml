<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" spacing="10" prefWidth="520" style="-fx-background-color: white; -fx-padding: 16;" fx:controller="main.java.controller.admin.courseOffering.ReadCourseOfferingFormController">
    <children>
        <Text text="Chi tiết lớp học phần" fill="#a3151a">
            <font><Font name="Roboto Bold" size="20"/></font>
        </Text>

        <GridPane hgap="10" vgap="8">
            <columnConstraints>
                <ColumnConstraints minWidth="130"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <children>
                <Label text="Mã lớp HP:" GridPane.rowIndex="0"/>
                <Label fx:id="offeringCodeLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Môn học:" GridPane.rowIndex="1"/>
                <Label fx:id="courseLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Giảng viên:" GridPane.rowIndex="2"/>
                <Label fx:id="lecturerLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Phòng học:" GridPane.rowIndex="3"/>
                <Label fx:id="roomLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Sĩ số tối đa:" GridPane.rowIndex="4"/>
                <Label fx:id="capacityLabel" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Học kỳ:" GridPane.rowIndex="5"/>
                <Label fx:id="semesterLabel" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            </children>
        </GridPane>

        <TitledPane text="Lịch học" expanded="false">
            <content>
                <ListView fx:id="scheduleListView" prefHeight="160"/>
            </content>
        </TitledPane>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <children>
                <Button fx:id="closeButton" text="Đóng" onAction="#handleClose"/>
            </children>
        </HBox>
    </children>
</VBox>