<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      prefWidth="700.0" spacing="12.0" stylesheets="" fx:controller="main.java.controller.form.CourseOfferingFormController"
      style="-fx-background-color: white; -fx-padding: 16;">
    <children>
        <Text fx:id="formTitle" text="Sửa Lớp học phần" fill="#a3151a">
            <font><Font name="Roboto Bold" size="22"/></font>
        </Text>

        <!-- Ẩn id lớp học phần -->
        <TextField fx:id="offeringIdField" managed="false" visible="false" />

        <GridPane hgap="12" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="140"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <children>
                <Label text="Môn học:" GridPane.rowIndex="0"/>
                <ComboBox fx:id="courseComboBox" promptText="Chọn môn" prefWidth="420" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Giảng viên:" GridPane.rowIndex="1"/>
                <ComboBox fx:id="lecturerComboBox" promptText="Chọn giảng viên" prefWidth="420" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Phòng học:" GridPane.rowIndex="2"/>
                <ComboBox fx:id="roomComboBox" promptText="Chọn phòng" prefWidth="420" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Sĩ số tối đa:" GridPane.rowIndex="3"/>
                <TextField fx:id="capacityField" promptText="VD: 60" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Học kỳ:" GridPane.rowIndex="4"/>
                <ComboBox fx:id="semesterComboBox" promptText="Chọn học kỳ" prefWidth="420" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </children>
        </GridPane>

        <TitledPane text="Lịch học" expanded="true">
            <content>
                <HBox spacing="14">
                    <children>
                        <VBox spacing="8">
                            <children>
                                <HBox spacing="8">
                                    <children>
                                        <ComboBox fx:id="scheduleDayComboBox" promptText="Thứ" prefWidth="100"/>
                                        <ComboBox fx:id="scheduleStartTimeComboBox" promptText="Bắt đầu" prefWidth="120"/>
                                        <ComboBox fx:id="scheduleEndTimeComboBox" promptText="Kết thúc" prefWidth="120"/>
                                        <Button fx:id="scheduleAddButton" text="Thêm" onAction="#handleAddSchedule"/>
                                    </children>
                                </HBox>
                                <Label text="Lịch đã chọn:" />
                                <ListView fx:id="selectedSchedulesList" prefHeight="160" prefWidth="340"/>
                                <Button fx:id="scheduleRemoveButton" text="Xoá dòng đã chọn" onAction="#handleRemoveSchedule" />
                            </children>
                        </VBox>

                        <VBox spacing="8">
                            <children>
                                <Label text="Gợi ý lịch trống (nếu có):"/>
                                <ListView fx:id="availableSchedulesList" prefHeight="240" prefWidth="300"/>
                                <Button fx:id="useSuggestedScheduleButton" text="Dùng lịch gợi ý" onAction="#handleUseSuggested"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </content>
        </TitledPane>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <children>
                <Button fx:id="cancelButton" text="Hủy" onAction="#handleCancel"/>
                <Button fx:id="saveButton" text="Lưu thay đổi" onAction="#handleSave" style="-fx-background-color: #a3151a; -fx-text-fill: white;"/>
            </children>
            <VBox.margin><Insets top="8"/></VBox.margin>
        </HBox>
    </children>
</VBox>