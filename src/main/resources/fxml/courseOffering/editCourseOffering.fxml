<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" prefWidth="700.0" spacing="12.0" fx:controller="main.java.controller.admin.courseOffering.EditCourseOfferingFormController" style="-fx-background-color: white; -fx-padding: 16;">
    <children>
        <Text fx:id="formTitle" text="Sửa Lớp học phần" fill="#a3151a">
            <font><Font name="Roboto Bold" size="22"/></font>
        </Text>

        <GridPane hgap="12" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="140" prefWidth="140.0"/>
                <ColumnConstraints />
                <ColumnConstraints halignment="RIGHT" minWidth="140" prefWidth="140.0"/>
                <ColumnConstraints />
            </columnConstraints>
            <children>
                <Label text="Mã HP (ID):" GridPane.rowIndex="0"/>
                <TextField fx:id="offeringIdField" editable="false" prefWidth="420.0" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Môn học:" GridPane.rowIndex="1"/>
                <ComboBox fx:id="courseComboBox" promptText="Chọn môn" prefWidth="420.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Giảng viên:" GridPane.rowIndex="2"/>
                <TextField fx:id="lecturerField" promptText="Nhập tên giảng viên" prefWidth="420.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Mã Khoa &amp; Tên Khoa:" GridPane.rowIndex="3"/>
                <ComboBox fx:id="facultyComboBox" promptText="Chọn khoa" prefWidth="420.0" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Phòng học:" GridPane.rowIndex="4"/>
                <ComboBox fx:id="roomComboBox" promptText="Chọn phòng" prefWidth="420" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Sĩ số tối đa:" GridPane.rowIndex="5"/>
                <TextField fx:id="capacityField" promptText="VD: 60" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <Label text="Học kỳ:" GridPane.rowIndex="6"/>
                <ComboBox fx:id="semesterComboBox" promptText="Chọn học kỳ" prefWidth="420" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
            </children>
        </GridPane>

        <Label text="LỊCH HỌC" style="-fx-font-weight: bold;"/>
        <HBox spacing="14">
            <children>
                <VBox spacing="8">
                    <children>
                        <Label text="Lịch đã chọn:" />
                        <ListView fx:id="selectedSchedulesList" prefHeight="240" prefWidth="320"/>
                        <Button fx:id="scheduleRemoveButton" text="Xoá dòng đã chọn" onAction="#handleRemoveSchedule" />
                    </children>
                </VBox>

                <VBox spacing="8">
                    <children>
                        <Label text="Lịch trống:"/>
                        <ListView fx:id="availableSchedulesList" prefHeight="240" prefWidth="320"/>
                        <Button fx:id="useSuggestedScheduleButton" text="Dùng lịch" onAction="#handleUseSuggested"/>
                    </children>
                </VBox>
            </children>
        </HBox>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <children>
                <Button fx:id="cancelButton" text="Hủy" onAction="#handleCancel"/>
                <Button fx:id="saveButton" text="Lưu thay đổi" onAction="#handleSave" style="-fx-background-color: #a3151a; -fx-text-fill: white;"/>
            </children>
            <VBox.margin><Insets top="8"/></VBox.margin>
        </HBox>
    </children>
</VBox>