<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="main.java.controller.DashboardController" spacing="8">
	<!-- Minimal dashboard: input, button, and table -->
	<padding>
		<Insets top="10" right="10" bottom="10" left="10" />
	</padding>
	<HBox spacing="8">
	<TextField fx:id="inputField" promptText="Enter text..." HBox.hgrow="ALWAYS" />
	<Button text="Add" fx:id="addButton" onAction="#handleAdd" />
	</HBox>

	<TableView fx:id="tableView" prefHeight="400" prefWidth="600">
		<columns>
			<TableColumn fx:id="colIndex" text="#" prefWidth="50" />
			<TableColumn fx:id="colValue" text="Value" prefWidth="550" />
		</columns>
	</TableView>
</VBox>

