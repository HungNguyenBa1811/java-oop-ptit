<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="main.java.controller.LoginController"
            prefWidth="400" prefHeight="250">

    <children>
        <Label text="Tên đăng nhập:" layoutX="50" layoutY="60" />
        <TextField fx:id="usernameField" layoutX="160" layoutY="55" prefWidth="180" />

        <Label text="Mật khẩu:" layoutX="50" layoutY="110" />
        <PasswordField fx:id="passwordField" layoutX="160" layoutY="105" prefWidth="180" />

        <Button text="Đăng nhập"
                fx:id="loginButton"
                layoutX="160" layoutY="160"
                prefWidth="100"
                onAction="#handleLogin" />
    </children>
</AnchorPane>
