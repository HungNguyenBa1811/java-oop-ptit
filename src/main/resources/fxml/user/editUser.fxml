<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      prefWidth="560" spacing="12.0" fx:controller="main.java.controller.form.UserFormController"
      style="-fx-background-color: white; -fx-padding: 16;">
    <children>
        <Text fx:id="formTitle" text="Sửa Người dùng" fill="#a3151a">
            <font><Font name="Roboto Bold" size="22"/></font>
        </Text>

        <!-- Ẩn id người dùng -->
        <TextField fx:id="userIdField" managed="false" visible="false"/>

        <GridPane hgap="12" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="160"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <children>
                <Label text="Tên đăng nhập:" GridPane.rowIndex="0"/>
                <TextField fx:id="usernameField" promptText="Tên đăng nhập" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Mật khẩu (để trống nếu giữ nguyên):" GridPane.rowIndex="1"/>
                <PasswordField fx:id="passwordField" promptText="••••••" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Họ và tên:" GridPane.rowIndex="2"/>
                <TextField fx:id="fullNameField" promptText="VD: Nguyễn Văn A" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Email:" GridPane.rowIndex="3"/>
                <TextField fx:id="emailField" promptText="VD: a@b.edu.vn" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Vai trò:" GridPane.rowIndex="4"/>
                <ComboBox fx:id="roleComboBox" promptText="Chọn vai trò" prefWidth="380" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label fx:id="majorLabel" text="Ngành (chỉ SV):" GridPane.rowIndex="5"/>
                <ComboBox fx:id="majorComboBox" promptText="Chọn ngành" prefWidth="380" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <Label fx:id="statusLabel" text="Trạng thái (chỉ SV):" GridPane.rowIndex="6"/>
                <ComboBox fx:id="statusComboBox" promptText="Chọn trạng thái" prefWidth="380" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
            </children>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <children>
                <Button fx:id="cancelButton" text="Hủy" onAction="#handleCancel"/>
                <Button fx:id="saveButton" text="Lưu thay đổi" onAction="#handleSave" style="-fx-background-color: #a3151a; -fx-text-fill: white;"/>
            </children>
            <VBox.margin><Insets top="10"/></VBox.margin>
        </HBox>
    </children>
</VBox>